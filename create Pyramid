//function to create real pyramid of given height
function createPyramid(a){
  for(var i=1; i<=a; i++){
    var pattern=''; //javascript doesnot have inline print option in console
    var k=0;
    for(var j=1; j<=a-i; j++){
      pattern+="  ";
    }
    while(k!= 2*i-1){
     pattern+="* ";
      k++;
    }
    console.log(pattern);
  }     
}
//call create pyramid function
createPyramid(7);
